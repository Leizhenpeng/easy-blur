{
    "manifest_version": 3,
    "name": "Easy Blur",
    "version": "1.0",
    "description": "Blur parts of a web page, before taking screenshots or screen recordings",
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/icon.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}